---
import Logo from '@/images/logo.png'
import { Image } from 'astro:assets'
import Container from './Container.astro'
import ExtraNavigation from './ExtraNavigation.astro'
import HeaderLink from './HeaderLink.astro'
import MenuMobile from './MenuMobile.astro'
---

<header class="header">
  <Container class="header-inner">
    <a
      href="/"
      class="logo"
      ><Image
        src={Logo}
        alt="logo"
        width={32}
        height={32}
        format="webp"
        loading="eager"
        fetchpriority="high"
      /></a
    >

    <nav
      class="nav"
      aria-label="グローバルナビゲーション"
    >
      <div class="links">
        <div class="internal-links">
          <HeaderLink href="/">HOME</HeaderLink>
          <HeaderLink href="/blog/">BLOG</HeaderLink>
          <HeaderLink href="/note/">NOTE</HeaderLink>
          <HeaderLink href="/contact/">CONTACT</HeaderLink>
        </div>
        <ExtraNavigation />
      </div>
    </nav>
    <MenuMobile />
  </Container>
</header>

<style lang="scss">
  .header {
    z-index: 1;
    padding: 20px 0 40px;

    @include mq(md) {
      padding: 48px 0 60px;
    }
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-width);
    margin-inline: auto;
  }

  .logo img {
    border-radius: var(--rounded-full);
  }

  .nav {
    display: none;

    @include mq(md) {
      display: block;
    }
  }

  .links {
    display: flex;
    align-items: center;
  }

  .internal-links {
    display: flex;
    align-items: center;
  }
</style>
