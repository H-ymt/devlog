---
import BlogList from '@/components/BlogList.astro'
import Container from '@/components/Container.astro'
import { TOP_PAGE_LIMIT } from '@/consts'
import BaseLayout from '@/layouts/BaseLayout.astro'
---

<BaseLayout title="">
  <Container>
    <p class="top-text">
      Webエンジニアによるテックブログです。<br
      />HTML/CSS/JavaScriptの技術情報を中心に発信していきます。
    </p>

    <BlogList limit={TOP_PAGE_LIMIT} />
  </Container>
</BaseLayout>

<style lang="scss">
  .top-text {
    padding-top: 12px;
    padding-bottom: 28px;
    font-size: 16px;

    @include mq(md) {
      padding-bottom: 40px;
    }
  }
</style>
