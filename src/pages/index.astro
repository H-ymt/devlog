---
import BlogList from '../../src/components/blog-list/index.astro'
import Container from '../../src/components/container/index.astro'
import TagList from '../../src/components/tag-list/index.astro'
import BaseLayout from '../../src/layouts/base-layout/index.astro'
---

<BaseLayout description="My web developing log">
  <Container>
    <TagList />

    <BlogList limit={6} />
  </Container>
</BaseLayout>

<style lang="scss">
  .top-text {
    padding-bottom: 1.75rem;
    font-size: 1rem;
  }

  .space-container {
    padding-bottom: 2rem;
  }

  .space-list {
    display: flex;
    gap: 0.25rem;
    align-items: center;
  }

  .space-link {
    padding: 0.0625rem 0.375rem;
    font-size: 1rem;
    font-weight: 400;
    color: var(--c-text-2);
    text-decoration: underline;
    text-decoration-color: var(--c-border);
    border-radius: var(--rounded-sm);

    @include hover {
      color: var(--c-text-1);
      background: var(--c-background-soft);
      transition:
        color 0.25s,
        background 0.25s;
    }
  }

  .space-list p {
    font-size: 0.875rem;
    color: var(--c-text-2);
  }
</style>
