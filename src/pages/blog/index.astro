---
import BlogList from '@/components/BlogList.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Container from '@/components/Container.astro'
import { BLOG_PAGE_LIMIT } from '@/consts'
import BaseLayout from '@/layouts/BaseLayout.astro'
---

<BaseLayout
  title="Blog"
  description="Blog page description"
>
  <Container>
    <Breadcrumbs />
    <section>
      <BlogList limit={BLOG_PAGE_LIMIT} />
    </section>
  </Container>
</BaseLayout>

<style lang="scss">
  .list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }

  .post-link {
    display: grid;
    gap: 6px;
    text-decoration: none;
  }

  .image {
    width: min(100%, 280px);
    aspect-ratio: 4 / 2.5;
    object-fit: cover;
    border-radius: var(--rounded-sm);
  }

  .title {
    margin-top: 6px;
    font-size: 14px;
    color: var(--c-text-1);
  }

  .date {
    font-size: 12px;
    color: var(--c-text-3);
  }

  .tag-list {
    display: flex;
    gap: 6px;
    align-items: center;
    margin-top: 2px;
  }

  .tag {
    display: flex;
    gap: 1px;
    align-items: center;
    padding: 4px 14px;
    font-size: 10px;
    color: var(--c-text-3);
    background: transparent;
    border: 1px solid var(--c-border);
    border-radius: var(--rounded-full);

    @include hover {
      background: var(--c-background-soft);
    }
  }
</style>
